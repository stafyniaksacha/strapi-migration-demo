{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "indexes": [
    {
      "name": "articles_slug_version_index",
      "columns": ["version", "slug"]
    }
  ],
  "attributes": {
    "slug": {
      "type": "string",
      "required": true
    },
    "version": {
      "type": "integer",
      "min": 1,
      "default": 1,
      "configurable": false
    },
    "state": {
      "type": "enumeration",
      "enum": [
        "Draft",
        "In_Review",
        "Scheduled",
        "Published"
      ],
      "required": true,
      "default": "Draft",
      "private": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext"
    }
  }
}
